# .editorconfig file for Soar Engine - a custom build of Unreal Engine

# Top-most EditorConfig file
root = true

# General Settings
[*]
indent_style = space        # Use spaces for indentation
indent_size = 4             # 4 spaces per indentation level
end_of_line = lf            # Use LF for line endings
charset = utf-8             # Set charset to UTF-8
trim_trailing_whitespace = true  # Remove trailing whitespace
insert_final_newline = true  # Ensure files end with a newline

# C++ files settings
[*.{cpp,h}]
# Use the following settings for C++ files
indent_style = space
indent_size = 4
# C++ Specific settings (if needed)
# You can also configure specific rules for C++ here if your IDE supports it

# C++ naming conventions (add your preferred IDE specific configurations)
[*.cpp]
# Naming conventions can be enforced via IDE-specific settings
# Example for Visual Studio
# dotnet_naming_rule.use_camel_case_for_methods.severity = warning

[*.h]
# Naming conventions can be enforced via IDE-specific settings
# Example for Visual Studio
# dotnet_naming_rule.use_camel_case_for_properties.severity = warning

# Soar Engine-specific settings
[*.uasset]
indent_size = 4
insert_final_newline = true

[*.uproject]
indent_size = 4
insert_final_newline = true

# Soar Engine specific source files
[*.{ini,build}]
indent_size = 2
insert_final_newline = true

# Exclude specific files or folders (optional)
[*.sln]
# Solution files are excluded from the formatting rules

# Exclude any temporary files
[*.tmp]
# Ignore temporary files

# End of .editorconfig
